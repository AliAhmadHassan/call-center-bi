@model IEnumerable<ControlDesk.WebApplication.Models.Mailing>

<table style="text-align:center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Campanha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercMailing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CpfRestantes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atendidas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desligadas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TNA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TMA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TMO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idle)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="border:solid 1px silver; text-align:left">
            @Html.DisplayFor(modelItem => item.Campanha)
        </td>
        <td>
            <div style="border:solid 1px black; height:15px; width:300px">
                @if (item.PercMailing > 75)
                {
                    <div style="color:yellow;background-color: red; width: @(item.PercMailing*3)px; height:15px">@(item.PercMailing)%</div>
                }
                else
                {
                    <div style="color:yellow;background-color: blue; width: @(item.PercMailing*3)px; height:15px">@(item.PercMailing)%</div>
                }
            </div>
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.CpfRestantes)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.Atendidas)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.Desligadas)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.TNA)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.TMA)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.TME)
        </td>
        <td style="border:solid 1px silver">
            @Html.DisplayFor(modelItem => item.TMO)
        </td>
        <td style="border:solid 1px silver">
            @item.Idle.ToString("mm"):@item.Idle.ToString("ss")
        </td>
    </tr>
}
    <tr>
        <td colspan="9" style="text-align:right; font-size:x-small">@Html.DisplayNameFor(model => model.DataAtualizacao) = @Html.DisplayFor(model => model.FirstOrDefault().DataAtualizacao)</td>
    </tr>
</table>

