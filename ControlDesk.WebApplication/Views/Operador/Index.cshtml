@model IEnumerable<ControlDesk.WebApplication.Models.Operador>

@{
    ViewBag.Title = "Lista de Operadores";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<ControlDesk.Dominio.Grupo> grupos = new ControlDesk.Dominio.Grupo().Grupos();
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdGrupo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Nome, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fim)
        </td>
        <td>
            @(grupos.Where(c=>c.Id.Equals(item.IdGrupo)).FirstOrDefault().Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
